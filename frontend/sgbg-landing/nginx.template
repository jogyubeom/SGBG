server {
    listen ${LISTEN_PORT};
    server_name k11b205.p.ssafy.io;

    location / {
        root /usr/share/nginx/landinghtml;
        index index.html;
        try_files $uri $uri/ /index.html;

        # JavaScript MIME 타입 강제 설정
        add_header Content-Type application/javascript;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/landinghtml;
    }
}
